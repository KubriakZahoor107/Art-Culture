{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "src/types/express.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.js",
    "prismaClient.js"
  ],
  "ts-node": {
    "esm": true
  }
}