{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "isolatedModules": true,
    "target": "ES2022",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
